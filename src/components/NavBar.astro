---
import logo from "@/components/assets/SFslogan.png";
---

<nav class="bg-white">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/#" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img class="w-[200px] md:w-[250px]" src={logo.src} />
    </a>
    <button
      id="menu-toggle"
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-black flex flex-col p-4 md:p-0 mt-4 bg-white md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white text-center gap-32 md:gap-10 text-5xl md:text-lg h-[82vh] md:h-auto justify-center items-center"
      >
        <li class="text-primary hover:opacity-50 font-semibold">
          <a href="/">SERVICIOS</a>
        </li>
        <li class="text-primary hover:opacity-50 font-semibold">
          <a href="/">NOSOTROS</a>
        </li>
        <li class="text-white hover:text-primary font-semibold">
          <a
            class="py-3 pt-6 md:pt-4 px-8 bg-primary text-center hover:bg-white border border-secondary border-spacing-0 rounded-lg"
            href="/">COTIZÁR</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const navList = document.getElementById("navbar-default");

  menuToggle.addEventListener("click", () => {
    navList.classList.toggle("hidden");
  });
</script>

