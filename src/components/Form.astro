---
// seguros@sfernandezseguros.com.ar
---

<div class="md:mt-8 mx-auto w-[95%] md:w-full md:mb-10 border rounded-lg">
  <div class="bg-white py-8 px-6 rounded-lg sm:px-10">
    <h1
      class="text-center font-bold text-primary text-3xl md:text-4xl lg:text-5xl p-5"
    >
      CONTACTÁNOS
    </h1>
    <form
      class="md:grid md:grid-cols-2 flex flex-col gap-4 mb-0 font-secondary"
      action="https://formsubmit.co/101212e89115a5291bffe07113a6b9df"
      method="POST"
      id="contactForm"
    >
      <div class="">
        <label for="name" class="block text-md font-medium text-oscure"
          >Nombre</label
        >
        <div class="mt-1">
          <input
            id="name"
            name="Nombre"
            type="text"
            autocomplete="name"
            required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-secondary"
          />
        </div>
      </div>
      <div class="">
        <label for="text" class="block text-md font-medium text-oscure"
          >Apellido</label
        >
        <div class="mt-1">
          <input
            id="surname"
            name="Apellido"
            type="text"
            autocomplete=""
            required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-secondary"
          />
        </div>
      </div>
      <div class="">
        <label for="email" class="block text-md font-medium text-oscure"
          >Correo Electronico</label
        >
        <div class="mt-1">
          <input
            id="email"
            name="Correo Electronico"
            type="email"
            autocomplete="email"
            required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-secondary"
          />
        </div>
      </div>
      <div class="mt-1">
        <div>
          <label for="number" class="block text-md font-medium text-oscure"
            >Teléfono</label
          >
          <input
            id="phone"
            name="Teléfono"
            type="text"
            autocomplete=""
            required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-secondary"
          />
        </div>
      </div>

      <div class="mt-1">
        <div>
          <label for="text" class="block text-md font-medium text-oscure"
            >Localidad</label
          >
          <input
            id="city"
            name="Localidad"
            type="text"
            autocomplete=""
            required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-secondary"
          />
        </div>
      </div>
      <div class="mt-1">
        <div>
          <label
            for="motivo-select"
            class="block text-md font-medium text-oscure">Motivo:</label
          >

          <select
            name="motivo"
            id="motivo-select"
            required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-secondary"
          >
            <option value="">--Elija una opción--</option>
            <option value="Cotizar">Cotizar</option>
            <option value="Consulta">Consulta</option>
            <option value="Productores">Productores</option>
          </select>
        </div>
      </div>

      <div class="mt-1 col-span-2">
        <div class="relative">
          <label for="text" class="block text-md font-medium text-oscure"
            >¿Cómo podemos ayudarte?</label
          >
          <textarea
            class="form-control resize-textarea w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-secondary"
            name="Mensaje"
            id="message"
            required="message"></textarea>
        </div>
      </div>
      <div class="mt-1 col-span-2 w-1/2 mx-auto">
        <input
          class="w-full bg-primary hover:bg-white text-white font-bold py-2 px-4 border border-primary hover:text-primary rounded"
          type="submit"
        />
      </div>
      <input
        type="hidden"
        name="_next"
        value="https://villaivan.github.io/SilviaFernandezWeb/"
      />
      <input type="hidden" name="_subject" id="formSubject" value="" />
      <input type="hidden" name="_captcha" value="false" />
    </form>
  </div>
</div>

<script>
  document
    .getElementById("contactForm")
    .addEventListener("submit", function (e) {
      let motivoSelect = document.getElementById("motivo-select");
      let formSubject = document.getElementById("formSubject");

      if (
        motivoSelect instanceof HTMLSelectElement &&
        formSubject instanceof HTMLInputElement
      ) {
        let motivo = motivoSelect.value;
        formSubject.value = motivo;
      }
    });
</script>
