---
// Supports weights 100-900
import "@fontsource-variable/league-spartan";
import "@fontsource/ibm-plex-sans";
import NavBar from "@/components/NavBar.astro";
import Footer from "@/components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Silvia Fernandez Seguros - Seguros de Vida, Salud, Auto y más. Protege a tu familia y tus bienes con nuestras coberturas completas y personalizadas."
    />
    <meta
      name="keywords"
      content="seguros, aseguradora, seguro de vida, seguro de salud, seguro de auto, protección, cobertura, ejemplo de seguros, silvia fernandez seguros"
    />
    <meta name="author" content="Silvia Fernandez Seguros" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="mx-auto">
      <NavBar />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: "League Spartan Variable", sans-serif;
    background: #ffffff;
    background-size: 224px;
  }
  h1 {
  }
</style>

